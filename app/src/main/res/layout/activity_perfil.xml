

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:id="@+id/rl_view"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".MainActivity">

    <Button
        android:id="@+id/show_options_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Tomar Foto" />

    <ImageView
        android:id="@+id/set_picture"
        android:layout_width="393dp"
        android:layout_height="652dp"
        android:layout_below="@+id/show_options_button"
        android:layout_marginTop="62dp"
        android:adjustViewBounds="true"
        android:contentDescription="This is where the picture is going to assign"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/verimagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_options_button"
        android:visibility="gone"
        android:text="Ver en el servidor" />

</RelativeLayout>

