<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dip"
    android:stretchColumns="1" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Solicitud Primera Revision" />

            <TextView
                android:text="Carnet"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <EditText
                android:id="@+id/editCarnet"
                android:inputType="text"
                android:maxLength="15"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView android:text="Nombre"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <EditText
                android:id="@+id/editNombre"
                android:inputType="text"
                android:maxLength="30"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView android:text="Materia"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

            <EditText
                android:id="@+id/editMateria"
                android:inputType="text"
                android:maxLength="30"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:editable="false"
                android:focusable="false"
                android:clickable="true"/>


            <TextView android:text="Evaluacion"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

            <EditText
                android:id="@+id/editEvaluacion"
                android:inputType="text"
                android:maxLength="10"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:editable="false"
                android:focusable="false"
                android:clickable="true"/>

            <TextView
                android:id="@+id/fecha_evaluacion"
                android:text="Fecha Solicitud"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            <Button
            android:id="@+id/enviarSolicitud"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="irAprobarSolicitudRepetido"
            android:text="Enviar Solicitud" />

            <Button
                android:id="@+id/probarFechas"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Probar" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>