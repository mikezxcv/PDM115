<?xml version="1.0" encoding="utf-8"?>
<LinearLayout tools:context=".webServices.ActualizarLocales"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/LinearLayout1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<EditText  android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Actualizar Lista de Locales desde Servidor EISI" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/wsLocales"
            android:text="Obtener Locales"
            android:onClick="obtenerLocales"
            tools:ignore="OnClick" />
        <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/guardarDBLocal"
            android:text="Guardar En DB Local"
            android:onClick="guardar"
            tools:ignore="OnClick" />



    </LinearLayout>

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/listViewLocales">
    </ListView>


</LinearLayout>
