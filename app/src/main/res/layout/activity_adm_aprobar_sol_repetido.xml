<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dip"
    android:stretchColumns="1" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView android:text="Aprobar Solicitud Repetido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:text="Estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/radioRechazado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechazar"
        />

    <RadioButton
        android:id="@+id/radioAprobado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aprobar" />
</RadioGroup>



    <TextView android:text="Fecha a realizar Evaluacion"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <EditText
        android:id="@+id/editfechaEvaluacionRepetido"
        android:inputType="text"
        android:maxLength="30"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:editable="false"
        android:focusable="false"
        android:clickable="true"/>
    <TextView android:text="Hora"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <EditText
        android:id="@+id/editHoraRepetido"
        android:inputType="text"
        android:maxLength="10"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <TextView android:text="Local"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:editable="false"
        android:focusable="false"
        android:clickable="true"/>
    <EditText
        android:id="@+id/editLocalRepetido"
        android:inputType="text"
        android:maxLength="30"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView android:text="Observaciones"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <EditText
        android:id="@+id/editObservacionesRepetido"
        android:inputType="text"
        android:maxLength="50"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <Button
        android:onClick="GuardarCambiosSolicitudRepetido"
        android:id="@+id/guardarRepetido"
        android:text="Guardar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    </LinearLayout>
    </ScrollView>


</TableLayout>