<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:stretchColumns="1" >
    <TextView
        android:text="Aprobar Solicitud Segunda Revision "


        />
    <TableRow>
        <TextView
            android:text="Estado " />
        <RadioGroup>
            <RadioButton
                android:id="@+id/aprobado"
                android:text="Aprobado " >

            </RadioButton>
            <RadioButton
                android:id="@+id/denegado"

                android:text="Denegado " >

            </RadioButton>
        </RadioGroup>
    </TableRow>
    <TableRow>
        <TextView android:text="Fecha de Revision" />
        <TextView
            android:id="@+id/fechaAsignarSegundaRevision"
            android:textSize="20sp"
            android:inputType="date"
            android:hint="  Seleccione una Fecha"
            android:maxLength="10" />
    </TableRow>

    <TableRow>
        <TextView android:text="Hora Revision" />
        <EditText
            android:id="@+id/horaSegundaRevision"
            android:inputType="number"
            android:hint="Formato valido 0 a 24 horas"

            android:maxLength="2" />
    </TableRow>
    <TableRow>
        <TextView android:text="Local Revision" />
        <EditText
            android:id="@+id/localAsignarSegundaRevision"
            android:inputType="date"
            android:maxLength="10" />
    </TableRow>
    <TableRow>
        <TextView android:text="Observaciones" />
        <EditText
            android:id="@+id/observacionesAsignarSegundaRevision"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>



    <Button

        android:id="@+id/irAorobarSolicitudSegundaRevision"
        android:onClick="actualizarSegundaRevision"
        android:text="Guardar " />
    <Button

        android:id="@+id/asignarDocentes"

        android:background="#f00"

        android:text="Asignar Docentes " />
    <Button

        android:id="@+id/verDocentesAsignados"

        android:background="#7dad9d"

        android:text="Ver Docentes Asignados" />








</TableLayout>
